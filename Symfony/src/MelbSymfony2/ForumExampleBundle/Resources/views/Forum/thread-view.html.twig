{% extends '::base.html.twig' %}

{% block title %}{{ thread.title }}{% endblock %}

{% block body %}
 
 
<h1>{{ thread.title }}</h1>
<p>{{ thread.body }}</p>
<h2>Posts</h2>

<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>
    {% for post in thread.posts %}
    <tr>
        <td>{{ post.title }}</td>
        <td>{{ post.body }}</td>
    </tr>
    {% endfor %}
</table>
{% endblock %}